<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        />
    <Button
        android:id="@+id/btn_mostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar Nombre"/>
    <Button
        android:id="@+id/btn_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alerta"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lbl_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btn_implicito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent Implícito"/>
    <Button
        android:id="@+id/btn_explicito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent Explícito"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListView"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default"/>
        <Button
            android:id="@+id/btn_listView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalizado"/>


    </LinearLayout>

</LinearLayout>